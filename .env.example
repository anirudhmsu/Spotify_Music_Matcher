SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# This must exactly match what you configure in your Spotify app dashboard.
# If you prefer this value, run the server on port 8888.
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8888/callback

# Any long random string used to sign session cookies (not your Spotify secret).
# Generate one: python -c "import secrets; print(secrets.token_urlsafe(32))"
APP_SECRET=change-me-long-random-string

# Database connection string
# SQLite (local dev):
DATABASE_URL=sqlite:///./dev.db
# Or Supabase Postgres (example):
# DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres
